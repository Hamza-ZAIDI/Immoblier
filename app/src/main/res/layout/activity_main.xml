<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity" android:orientation="horizontal"
        android:background="@color/background_color"
>

    <android.support.v7.widget.Toolbar android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:id="@+id/homeViewToolBar"
                                       android:minHeight="?attr/actionBarSize"
                                       android:title="@string/home_view_title"
                                       android:background="@color/colorPrimary"
                                       app:titleTextColor="@color/actionBarTextColor"

    >
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvAnnouncements" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_below="@+id/homeViewToolBar"
            android:background="@color/background_color"
    />
</RelativeLayout>
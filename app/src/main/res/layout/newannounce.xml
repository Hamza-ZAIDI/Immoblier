<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        tools:context=".newAnnounce"
        android:layout_height="match_parent"


        >

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0" android:id="@+id/scrollView3"
            app:layout_constraintTop_toBottomOf="@+id/titre">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <EditText
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/name" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.174" android:hint="Nom"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/email" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.174" android:hint="Email"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/phone" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.174" android:hint="Téléphone" android:inputType="number"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/wilaya" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.174" android:hint="Walaya"/>
            <EditText
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/adresse"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/name" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:hint="Adresse"/>

            <RadioGroup
                    android:layout_marginTop="30dp"
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <RadioButton
                        android:text="Appartement"
                        android:id="@+id/Appartement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:checked="true" android:textAlignment="textStart"/>
                <RadioButton
                        android:text="Villa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/Villa"/>
                <RadioButton
                        android:text="Lot de terrain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/Lot"/>
            </RadioGroup>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="104dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/description"
                    android:hint="Description"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/adresse" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"/>


            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/nbBedRooms"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/name" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:hint="Nobmbre de chambres"
                    android:inputType="number"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/garage"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/name" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:hint="Nombre de garage"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/area"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/name" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:hint="Surface" android:autofillHints=""
                    android:inputType="number"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/price"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/name" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:hint="Prix"/>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:text="Upload Photos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/upload"
                        android:textAlignment="center"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                <Button
                        android:text="Submit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/submit"
                        android:elevation="0dp" android:background="@color/colorPrimary" android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@id/upload"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp" android:layout_marginTop="8dp"
                        android:layout_marginBottom="88dp"/>
            </android.support.constraint.ConstraintLayout>


        </LinearLayout>
    </ScrollView>
    <TextView
            android:text="Ajouter une annonce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titre" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.072"
            app:layout_constraintVertical_bias="0.043" android:textSize="30sp" android:textAllCaps="false"
            android:textStyle="bold"/>


</android.support.constraint.ConstraintLayout>